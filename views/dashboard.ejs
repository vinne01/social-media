<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="https://ik.imagekit.io/vinaymry/apnasocialmedia.png?updatedAt=1737201800425" type="image/png">
    <title>ApnaSocialMedia</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
   
    <h1 class="text-4xl font-extrabold text-pink-500 text-center mb-6 transform transition-all duration-500 hover:text-yellow-300 hover:scale-105 shadow-lg p-4 rounded-lg bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 bg-clip-text text-transparent">
        ApnaSocialMedia
    </h1>
    

    <div class="flex justify-center items-center min-h-screen p-4">
        <div class="bg-white p-8 rounded-lg shadow-lg w-full sm:w-3/4 md:w-2/3 lg:w-1/2 xl:w-1/3">

 
    
         



            <h1 class="text-3xl font-extrabold text-pink-500 text-center mb-6 transform transition-all duration-500 hover:text-yellow-300 hover:scale-105 shadow-lg p-4 rounded-lg bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 bg-clip-text text-transparent">
                User Posts
            </h1>
            <!-- add [+] Button-->
            <div class="flex justify-center mb-4">
                <a href="/login" class="bg-green-500 text-white rounded-md px-4 py-2 hover:bg-green-600">
                    [+] Create New Post
                </a>
            </div>
            

            <!-- Loop through all posts from all users -->
            <% posts.forEach(function(post) { %>
                <div class="mb-6 p-4 bg-gray-50 rounded-lg shadow-md">
                    <div class="flex items-center mb-4">
                        <!-- Display User's Name and Date -->
                        <!-- <span class="text-gray-700 font-semibold mr-2"><%= post.user.username %></span> -->
                        <a href="/profile/<%= post.user._id %>" class="text-gray-700 font-semibold mr-2 hover:text-blue-500">
                            <%= post.user.username %>
                          </a>
                          
                        <span class="text-gray-500 text-sm"> <%= post.date ? new Date(post.date).toLocaleString() : "Invalid Dates" %></span>
                    </div>

                    <!-- Post Content -->
                    <p class="text-gray-700 mt-2"><%= post.content %></p>

                    <!-- Display the image if it exists -->
                    <% if (post.image) { %>
                        <div class="mt-4">
                            <img src="<%= post.image %>" alt="Post Image" class="w-full rounded-md shadow-md" />
                        </div>
                    <% } %>

                    <!-- Like Button and Count -->
                    <div class="flex justify-between items-center mt-4">
                        <div class="flex items-center">
                            <a href="/like/<%= post._id %>" class="text-gray-600 hover:text-blue-500">
                                <span role="img" aria-label="like">üëç</span> <%= post.likes.length %>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

</body>

</html>
